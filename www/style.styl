*
  /* box model */
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  /* tap highlight */
  -webkit-tap-highlight-color: rgba(0,0,0,0);

body
  width: 100%
  /* Android 233 fix*/
  overflow-y: hidden;
  .outer-wrapper 
    position: absolute
    top: 0
    left: 0
    background-color: blue;
    .inner-wrapper
      position: absolute;
      top: 0;
      left: 0;
      width: 100%

form > div
  width: 90%
  margin: 20px auto
  border: 1px solid black
  background-color: yellow

input
  border: 0;
  height: 50px;
  border-radius: 10px;
  display: block;
  margin: 20px;
  box-shadow: inset 0 0 20px 5px rgba(203, 203, 203, .9);
  -webkit-box-shadow: inset 0 0 20px 5px rgba(203, 203, 203, .9);
  /* iOS appearance fix */
  -webkit-appearance: none;

